<project name="janino" default="all" basedir="../..">
    <description>janino library, required by sunflow</description>
    <property file="ant/dacapo.properties"/>

    <property name="lib-name" value="janino"/>
    <property name="lib-version" value="2.5.15"/>
    <property name="lib-url" value="http://repo1.maven.org/maven2/org/codehaus/${lib-name}/${lib-name}/${lib-version}"/>
    <property name="lib-src" value="janino-${lib-version}.jar"/>

    <import file="../common.xml"/>

    <target name="jar" depends="janino-jar-check" unless="janino-build-done">
        <copy file="${lib-downloads}/janino-${lib-version}.jar" tofile="${janino-jar}"/>
    </target>

    <target name="janino-jar-check">
        <condition property="janino-build-done">
            <available file="${janino-jar}"/>
        </condition>
    </target>
</project>
